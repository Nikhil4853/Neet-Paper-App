                android:scaleType="centerCrop"
                android:id="@+id/ImageSet4y2017"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/s"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"

                />
            <TextView

                android:id="@+id/TextSet4y2017"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="       Set 4"
                android:textSize="25dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/ImageSet4y2017"
                app:layout_constraintRight_toRightOf="parent"/>

            <Button
                android:id="@+id/paperSet4y2017"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="40dp"

                android:layout_marginTop="10dp"
                android:text="paper"
                app:layout_constraintLeft_toRightOf="@id/ImageSet4y2017"
                app:layout_constraintTop_toBottomOf="@id/TextSet4y2017" />
            <Button
                android:id="@+id/ansSet4y2017"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="2dp"

                android:layout_marginTop="10dp"
                android:text="answer"
                app:layout_constraintLeft_toRightOf="@id/paperSet4y2017"
                app:layout_constraintTop_toBottomOf="@id/TextSet4y2017" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>