                android:id="@+id/ImageSet3y2017"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/s"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"

                />
            <TextView

                android:id="@+id/TextSet3y2017"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="       Set 3"
                android:textSize="25dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/ImageSet3y2017"
                app:layout_constraintRight_toRightOf="parent"/>

            <Button
                android:id="@+id/paperSet3y2017"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="40dp"

                android:layout_marginTop="8dp"
                android:text="paper"
                app:layout_constraintLeft_toRightOf="@id/ImageSet3y2017"
                app:layout_constraintTop_toBottomOf="@id/TextSet3y2017" />

            <Button
                android:id="@+id/ansSet3y2017"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="2dp"

                android:layout_marginTop="10dp"
                android:text="answer"
                app:layout_constraintLeft_toRightOf="@id/paperSet3y2017"
                app:layout_constraintTop_toBottomOf="@id/TextSet3y2017" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>




    <androidx.cardview.widget.CardView

        android:id="@+id/card4Set4y2017"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#BEEAB9"
        app:layout_constraintTop_toBottomOf="@id/card3Set3y2017"
        android:layout_marginTop="20dp"
