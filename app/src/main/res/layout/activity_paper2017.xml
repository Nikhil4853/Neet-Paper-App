                android:layout_height="80dp"
                android:src="@drawable/s"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"

                />
            <TextView

                android:id="@+id/TextSet2y2017"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="       Set 2"
                android:textSize="25dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/ImageSet2y2017"
                app:layout_constraintRight_toRightOf="parent"/>

            <Button
                android:id="@+id/paperSet2y2017"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="40dp"

                android:layout_marginTop="10dp"
                android:text="paper"
                app:layout_constraintLeft_toRightOf="@id/ImageSet2y2017"
                app:layout_constraintTop_toBottomOf="@id/TextSet2y2017" />
            <Button
                android:id="@+id/ansSet2y2017"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="2dp"

                android:layout_marginTop="10dp"
                android:text="answer"
                app:layout_constraintLeft_toRightOf="@id/paperSet2y2017"
                app:layout_constraintTop_toBottomOf="@id/TextSet2y2017" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView

        android:id="@+id/card3Set3y2017"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#EFB5B1"
        app:layout_constraintTop_toBottomOf="@id/card2Set2y2017"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        tools:ignore="MissingConstraints">
