<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="10dp"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/len"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<androidx.cardview.widget.CardView
    android:id="@+id/card1"

    app:cardBackgroundColor="#EFB5B1"
    app:cardCornerRadius="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingConstraints">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/s"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        />
    <TextView

        android:id="@+id/year"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="            YEAR-> 2020"
        android:textSize="25dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/image"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/btn2020"
        android:layout_width="82dp"
        android:layout_height="35dp"
        android:layout_marginLeft="80dp"

        android:layout_marginTop="10dp"
        android:text="Enter ->"
        app:layout_constraintLeft_toRightOf="@id/image"
        app:layout_constraintTop_toBottomOf="@id/year" />
</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        app:cardBackgroundColor="#BEEAB9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@+id/card1"
        android:layout_marginTop="10dp"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/image2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/s"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

            <TextView

                android:id="@+id/year2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="            YEAR-> 2019"
                android:textSize="25dp"
                app:layout_constraintLeft_toRightOf="@id/image2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn2019"
                android:layout_width="82dp"
                android:layout_height="35dp"
                android:layout_marginLeft="80dp"

                android:layout_marginTop="10dp"
                android:text="Enter ->"
                app:layout_constraintLeft_toRightOf="@id/image2"
                app:layout_constraintTop_toBottomOf="@id/year2" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card3"
        app:cardBackgroundColor="#EFB5B1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/card2"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="10dp"
        tools:ignore="MissingConstraints">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/image3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/s"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"

                />
            <TextView

                android:id="@+id/year3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="            YEAR-> 2018"
                android:textSize="25dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/image3"
                app:layout_constraintRight_toRightOf="parent"/>

            <Button
                android:id="@+id/btn2018"
                android:layout_width="82dp"
                android:layout_height="35dp"
                android:layout_marginLeft="80dp"

                android:layout_marginTop="10dp"
                android:text="Enter ->"
                app:layout_constraintLeft_toRightOf="@id/image3"
                app:layout_constraintTop_toBottomOf="@id/year3" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card4"
        app:cardBackgroundColor="#BEEAB9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@+id/card3"
        android:layout_marginTop="10dp"
        tools:ignore="MissingConstraints">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/image4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/s"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"

                />
            <TextView

                android:id="@+id/year4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="            YEAR-> 2017"
                android:textSize="25dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/image4"
                app:layout_constraintRight_toRightOf="parent"/>

            <Button
                android:id="@+id/btn2017"
                android:layout_width="82dp"
                android:layout_height="35dp"
                android:layout_marginLeft="80dp"

                android:layout_marginTop="10dp"
                android:text="Enter ->"
                app:layout_constraintLeft_toRightOf="@id/image4"
                app:layout_constraintTop_toBottomOf="@id/year4" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card5"
        app:cardBackgroundColor="#EFB5B1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/card4"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="10dp"
        tools:ignore="MissingConstraints">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/image5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/s"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"

                />
            <TextView

                android:id="@+id/year5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="            YEAR-> 2016"
                android:textSize="25dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/image5"
                app:layout_constraintRight_toRightOf="parent"/>

            <Button
                android:id="@+id/btn2016"
                android:layout_width="82dp"
                android:layout_height="35dp"
                android:layout_marginLeft="80dp"

                android:layout_marginTop="10dp"
                android:text="Enter ->"
                app:layout_constraintLeft_toRightOf="@id/image5"
                app:layout_constraintTop_toBottomOf="@id/year5" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    </LinearLayout>

  </ScrollView>